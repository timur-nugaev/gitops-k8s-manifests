kind: Namespace
apiVersion: v1
metadata:
  name: BRANCH
  labels:
    branch: BRANCH
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: BRANCH
  namespace: BRANCH
spec:
  project: default
  source:
    path: BRANCH
    repoURL: REPO
    targetRevision: BRANCH
  destination:
    server: https://kubernetes.default.svc
    namespace: BRANCH
  syncPolicy:
    automated:
      prune: true
      selfHeal: true    