kind: Namespace
apiVersion: v1
metadata:
  name: BRANCH
  labels:
    branch: BRANCH
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: BRANCH
  namespace: argocd
spec:
  project: default
  source:
    helm: 
      valueFiles:
        - base/values.yaml
        - dev/values.yaml
        - BRANCH/values.yaml
    path: charts/saca/
    repoURL: REPO
    targetRevision: BRANCH
  destination:
    server: https://kubernetes.default.svc
    namespace: BRANCH
  syncPolicy:
    automated:
      prune: true
      selfHeal: true    